<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uhack.targetinstoreshopping"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uhack.targetinstoreshopping.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uhack.targetinstoreshopping.BarcodeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.BarcodeActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="uhack.targetinstoreshopping.CheckoutActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.CheckoutActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uhack.targetinstoreshopping.IntentIntegrator"
            android:label="@string/title_activity_intent_integrator" >
        </activity>
        <activity
            android:name="uhack.targetinstoreshopping.FindRelatedActivity"
            android:label="@string/title_activity_find_related" >
        </activity>
        <activity
            android:name="uhack.targetinstoreshopping.CustomArrayAdapter2"
            android:label="@string/title_activity_custom_array_adapter2" >
        </activity>
        <activity
            android:name="uhack.targetinstoreshopping.PastReceiptActivity"
            android:label="@string/title_activity_past_receipt" >
        </activity>
    </application>

</manifest>
